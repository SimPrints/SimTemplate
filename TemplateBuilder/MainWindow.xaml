<Window x:Class="TemplateBuilderMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateBuilderMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="362" Width="525">
    <Grid>
        <ToolBarTray HorizontalAlignment="Left" Height="36" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <ToolBar x:Name="toolBar" Height="36" VerticalAlignment="Top" Margin="0,0,-139,-23">
                <Button x:Name="openFile" Content="Open" Height="36" VerticalAlignment="Top" Width="40" Click="openFile_Click" Margin="0,0,0,-5"/>
                <Button x:Name="saveTemplate" Content="Save" Height="36" VerticalAlignment="Top" Width="48" Click="saveTemplate_Click" Margin="0,0,0,-5"/>
            </ToolBar>
        </ToolBarTray>
        <Grid Margin="0,51,0,0">
            <Canvas x:Name="canvas" MouseMove="canvas_MouseMove" MouseLeftButtonUp="canvas_MouseLeftButtonUp"  />
        </Grid>
    </Grid>
</Window>
