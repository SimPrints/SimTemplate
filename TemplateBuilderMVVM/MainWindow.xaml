<Window x:Class="TemplateBuilderMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateBuilderMVVM.ViewModel"
        xmlns:conv="clr-namespace:TemplateBuilderMVVM.ViewModel.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="525"
        ResizeMode="NoResize">

    <Grid>
        <ToolBarTray HorizontalAlignment="Left" Height="36" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <ToolBar x:Name="toolBar" Height="36" VerticalAlignment="Top" Margin="0,0,-139,-23">
                <Button x:Name="openFile" Content="Open" Height="36" VerticalAlignment="Top" Width="40" Margin="0,0,0,-5"
                        Command="{Binding Path=LoadFileCommand}"/>
                <Button x:Name="saveTemplate" Content="Save" Height="36" VerticalAlignment="Top" Width="48" Margin="0,0,0,-5"/>
            </ToolBar>
        </ToolBarTray>

        <Grid Margin="0,51,0,0">
            <ItemsControl x:Name="itemsControl" MouseMove="itemsControl_MouseMove" MouseUp="itemsControl_MouseUp"
                          ItemsSource="{Binding Minutae}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- Set the 'panel' to be a Canvas for displaying our items -->
                        <Canvas Width="500" Height="500">
                            <Canvas.Background>
                                <!-- Bind the background image to the ViewModel field -->
                                <ImageBrush ImageSource="{Binding ImageFile}"/>
                            </Canvas.Background>
                        </Canvas>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate> <!-- Set Items to be interpreted as Ellipse shapes -->
                    <DataTemplate>
                        <Canvas>
                            <Ellipse Fill="Green" Width="25" Height="25"
                                     Panel.ZIndex="1"
                                     MouseRightButtonDown="Ellipse_MouseRightButtonDown"/>
                            <Line Stroke="GreenYellow" StrokeThickness="5" Panel.ZIndex="2"
                                  X1="12.5" 
                                  Y1="12.5"
                                  X2="{Binding Direction.X, Converter={conv:MultiplyConverter}, ConverterParameter=30;12.5}"
                                  Y2="{Binding Direction.Y, Converter={conv:MultiplyConverter}, ConverterParameter=30;12.5}" />
                        </Canvas>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Top" Value="{Binding Location.Y, Converter={conv:OffsetConverter}, ConverterParameter=-12.5}" />
                        <Setter Property="Canvas.Left" Value="{Binding Location.X, Converter={conv:OffsetConverter}, ConverterParameter=-12.5}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
